<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category.AdminCategoryActivity">


    <TextView
        android:textColor="#000000"
        android:id="@+id/tittle_category"
        android:fontFamily="@font/medium"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Add New Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@id/tittle_category"
        android:orientation="horizontal"
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/t_shirt"
            android:src="@drawable/tshirts"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/sports"
            android:src="@drawable/sports"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/femaleDress"
            android:src="@drawable/female_dresses"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/sweater"
            android:src="@drawable/sweather"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@id/linear_category_layout"
        android:orientation="horizontal"
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/glasses"
            android:src="@drawable/glasses"
            android:layout_width="90dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/purse_bag"
            android:src="@drawable/purses_bags"
            android:layout_width="90dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/hats"
            android:src="@drawable/hats"
            android:layout_width="90dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/shoes"
            android:src="@drawable/shoess"
            android:layout_width="90dp"
            android:layout_height="60dp" />



    </LinearLayout>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@id/linear2_category_layout"
        android:orientation="horizontal"
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/headphones"
            android:src="@drawable/headphoness"
            android:layout_width="90dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/laptops"
            android:src="@drawable/laptops"
            android:layout_width="90dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/watches"
            android:src="@drawable/watches"
            android:layout_width="90dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/mobiles"
            android:src="@drawable/mobiles"
            android:layout_width="90dp"
            android:layout_height="60dp" />



    </LinearLayout>

</RelativeLayout>