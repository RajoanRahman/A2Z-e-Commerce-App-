<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_backgoruntwo"
    tools:context=".LogInActivity">


    <EditText
        android:inputType="phone"
        android:id="@+id/phn_number_login_edit"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:textColorHint="#fc0043"
        android:hint="Phone Number"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/inside_deisgn"
        android:layout_width="380dp"
        android:layout_height="70dp" />

    <EditText
        android:inputType="textPassword"
        android:layout_below="@id/phn_number_login_edit"
        android:id="@+id/password_login_edit"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:textColorHint="#fc0043"
        android:hint="Password"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/inside_deisgn"
        android:layout_width="380dp"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_below="@id/password_login_edit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rey.material.widget.CheckBox
            android:layout_marginLeft="18dp"
            android:text="Remember me"
            android:textColor="#fc0043"
            android:textSize="16dp"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:id="@+id/logIn_checkBox"
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="82dp"
            android:textColor="#fc0043"
            android:textSize="16dp"
            android:text="Forget Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:id="@+id/logIn_button"
        android:textSize="20dp"
        android:fontFamily="@font/medium"
        android:textColor="#ffffff"
        android:text="Log In"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:layout_below="@id/password_login_edit"
        android:layout_centerHorizontal="true"
        android:layout_width="380dp"
        android:layout_height="70dp" />

    <TextView

        android:id="@+id/admin_panel_text"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:textColor="#fc0043"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/logIn_button"
        android:text="I'm the Admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/non_admin_panel_text"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textColor="#fc0043"
        android:layout_alignParentStart="true"
        android:layout_below="@id/logIn_button"
        android:text="I'm not a Admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>